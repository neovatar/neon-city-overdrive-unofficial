<div>
  <h3 class="ncou-hacked-font">Flaws</h3>
  <ol class="items-list ncou-items-list ncou-flaw-list">
    {{#each flaws as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <a class="item-control item-edit" title="{{localize "DOCUMENT.Update" type="Flaw"}}"><h4>{{item.name}}</h4></a>
        </div>
      </li>
    {{/each}}
    <li>
      <div class="flex-group-right">
        <a class="item-control item-create" title="{{localize "DOCUMENT.Create" type="Flaw"}}" data-type="flaw">
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </li>
  </ol>
</div>
